




<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <%= render "layouts/errors", obj:@post %>
      <h1 class="text-dark bg-light p-4 mb-0">編集画面</h1>
      <div class="form-body p-4">
        <%= form_with model: @post do |f| %>

          <%= f.label :image, class: "h4" %>
          <%= f.file_field :image, accept: "image/*", class:"w-100"; %>

          <div class="input-group mb-3 mt-4">
            <%= f.label :title, class: "h4" %>
            <%= f.text_field :title, class: "form-control"; %>
          </div>
          
  
          <%= f.label :body, class: "h4" %>
          <%= f.text_area :body, class: "form-control", rows:3, placeholder:"説明はここに"; %>
          <hr>
  
          <%= f.submit '保存', class: "btn btn-lg btn-block btn-info mt-4"; %>
          <%= link_to "戻る", post_path(@post.id), class: "btn btn-lg btn-block btn-secondary"; %>
  
        <% end %>
      </div>
    </div>
  </div>
</div>
