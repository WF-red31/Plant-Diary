<% if @posts.any? %>
<h2 class = "mt-3 mx-5">投稿一覧</h2>
  <div class="card-list-container py-5">
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to admin_path(post.id) do %>
      <%= image_tag post.get_image(672,672), class: "card-img-top post-image"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle user-profile"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to admin_path(post.id) do %>
              <strong class = "text-dark">タイトル：<span><%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">
            本文：<%= post.body %>
          </p>
          <span>
            <i class="fa-solid fa-user"></i>：<%= post.user.name %> |
          </span>
        </div>
      </div>
    </div>
  </div>
  <% end %> 
</div>
<% elsif @users.any? %>
  <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class = "table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colsapn = "3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", admin_dashboard_path(user.id) %></td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
    </div>
  </div>
</div>
<% else %>
  該当するデーターがありません。
<% end %>
