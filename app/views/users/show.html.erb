<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
    <p><%= link_to "退会", user_path(@user.id), class: "btn btn-sm btn-danger",  method: :delete, "data-confirm" => "本当に退会しますか？"%></p>
  <% end %>
</div>

<% @posts.each do |post| %>
  <div>
    <%= image_tag post.get_image %>
      <p>タイトル：<%= post.title %></p>
    <p>本文：<%= post.body %></p>
  </div>
<% end %>
