<div>
  <%= image_tag @post.get_image %>
  <p>タイトル：<%= @post.title %></p>
  <p>本文：<%= @post.body %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
    <p><%= link_to "編集", edit_post_path(@post.id) %></p>
    <p><%= link_to "削除", post_path(@post), method: :delete %></p>
  <% end %>
</div>
