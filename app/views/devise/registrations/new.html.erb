<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">

      <h2 class="text-dark bg-light p-4 mb-0">新規登録</h2>
      <div class="form-body p-4">

        <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
  
          <div class="field">
            <%= f.label :name, class: "h4" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :email, class: "h4" %><br />
            <%= f.email_field :email,  autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "h4" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "h4" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class: "mt-4 mb-3 btn btn-success btn-block" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

