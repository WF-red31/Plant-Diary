<div class="card-list-container py-5">
  <% posts.each do |post| %>
  <div class="card mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image(672,672), class: "card-img-top post-image"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle user-profile"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to post_path(post.id) do %>
              <strong class = "text-dark">タイトル：<span><%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">
            本文：<%= post.body %>
          </p>
          <span>
            <i class="fa-solid fa-user"></i>：<%= post.user.name %> |
          </span>
          <span><%= link_to "#{post.comments.count} コメント", post_path(post.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %> 
</div>
