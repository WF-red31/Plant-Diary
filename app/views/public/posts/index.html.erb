<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="mb-2">タグ一覧</h4>
      <%= link_to "all", posts_path, class: "badge badge-info" %>
      <% @tags.each do |tag| %>
        <%= link_to tag.name, posts_path(tag_id: tag.id), class: "badge badge-secondary" %>
      <% end %>
    </div>
    <div class="col-md-9">
      <%= render 'index', posts:@posts%>
      <%= paginate @posts %>
    </div>
  </div>
</div>


