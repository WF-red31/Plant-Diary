<%= render "layouts/errors", obj:@post %>
<h1>編集画面</h1>

<%= form_with model: @post do |f| %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '保存' %>
  
<% end %>

<p><%= link_to "戻る", post_path(@post.id) %></p>
