<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <%= render "layouts/errors", obj:@group %>
      <h1 class="text-dark bg-light p-4 mb-0">グループ作成フォーム</h1>
      <div class="form-body p-4">
        <%= form_with model: @group do |f| %>
          <%= hidden_field_tag :post_id, params[:post_id] %>
          <div class="input-group mb-3 mt-4">
            <%= f.label :name, class: "h4" %>
            <%= f.text_field :name, class: "form-control"; %>
          </div>
            <%= f.label :introduction, class: "h4" %>
            <%= f.text_area :introduction, class: "form-control", rows:3, placeholder:"説明はここに"; %>
            <hr>
            <%= f.submit '作成', class: "btn btn-lg btn-block btn-info mt-4"; %>
        <% end %>
      </div>
    </div>
  </div>
</div>
