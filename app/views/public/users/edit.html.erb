
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <%= render "layouts/errors", obj:@user %>
      <h2 class="text-dark bg-light p-4 mb-0">プロフィール編集</h2>
      <div class="form-body p-4">
        <%= form_with model: @user do |f| %>
          
          <div class="input-group mb-3 mt-4">
            <%= f.label :name, class: "h4" %>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control"; %>
          </div>
          
          <%= f.label :email, class: "h4" %>
          <%= f.text_field :email, placeholder:"email", class: "form-control"; %>
          
          <%= f.label :profile_image, class: "h4 mt-4" %>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "w-100"; %>  
          <hr>
          <%= f.submit "変更を保存", class: "btn btn-lg btn-block btn-info mt-4"; %>
          
          <%= link_to "戻る", user_path(current_user.id), class: "btn btn-lg btn-block btn-secondary";%>
        <% end %>

        
      </div>
    </div>
  </div>
</div>
