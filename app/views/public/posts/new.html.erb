
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <%= render "layouts/errors", obj:@post %>
      <h1 class="text-dark bg-light p-4 mb-0">投稿フォーム</h1>
      <div class="form-body p-4">
        <%= form_with model: @post do |f| %>
          <%= f.label :image, class: "h4" %>
          <%= f.file_field :image, accept: "image/*", class:"w-100"; %>
          <div class="input-group mb-3 mt-4">
            <%= f.label :title, class: "h4" %>
            <%= f.text_field :title, class: "form-control"; %>
          </div>
            <%= f.label :body, class: "h4" %>
            <%= f.text_area :body, class: "form-control", rows:3, placeholder:"説明はここに"; %>
            <%= f.label :date, class: "h4" %>
            <%= f.date_field :date , class: "form-control"%>
            <h4>タグ作成</h4>
            <%= f.text_field :tag_names, class: "form-control", placeholder:"複数タグをつける場合は[ , ]をつけて区切ってください" %>
            <hr>
            <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info mt-4"; %>
        <% end %>
      </div>
    </div>
  </div>
</div>
